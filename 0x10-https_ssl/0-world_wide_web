#!/usr/bin/env bash

dns_config() {
    local domain="$1"
    local subdomain="$2"

    # Run dig command and capture answer section
    local answer_section=$(dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:')
    
    # Extract record type and destination from answer section
    local record_type=$(echo "$answer_section" | awk '{print $4}')
    local destination=$(echo "$answer_section" | awk '{print $5}')

    # Output formatted result
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script logic
if [ "$#" -eq 1 ]; then
    # Display information for default subdomains
    dns_config "$1" "www"
    dns_config "$1" "lb-01"
    dns_config "$1" "web-01"
    dns_config "$1" "web-02"
elif [ "$#" -eq 2 ]; then
    # Display information for specified subdomain
    dns_config "$1" "$2"
fi
